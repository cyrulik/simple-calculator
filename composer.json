{
  "name": "cyrulik/simple-calculator",
  "description": "A simple calculator implementation with basic functionality.",
  "version": "1.0.0",
  "type": "library",
  "authors": [
    {
        "name": "Cyrulik",
        "email": "3313071+cyrulik@users.noreply.github.com"
    }
  ],
  "require": {
    "php": "^8.3"
  },
  "autoload": {
    "psr-4": {
      "Cyrulik\\SimpleCalculator\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Cyrulik\\SimpleCalculator\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "friendsofphp/php-cs-fixer": "^3.68",
    "phpstan/phpstan": "^2.1",
    "infection/infection": "^0.29.10"
  },
  "scripts": {
    "test": "phpunit",
    "test-coverage": "phpunit --coverage-html coverage",
    "fix": "php-cs-fixer fix",
    "analyse": "phpstan analyse",
    "infection": "infection"
  },
  "config": {
    "allow-plugins": {
      "infection/extension-installer": true
    }
  },
  "minimum-stability": "stable",
  "license": "MIT"
}
